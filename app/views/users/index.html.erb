<% provide(:title, 'ユーザー一覧') %>
<% provide(:button_text, '編集する') %>
<h1>ユーザー一覧</h1>



<div class="col-md-4 col-md-offset-1">
<%= form_tag import_users_path, multipart: true do %>
  <%= file_field_tag :file %>
  <button type="submit" style="WIDTH: 350px; HEIGHT: 30px" class="btn btn-primary">CSVをインポート</button>
<% end %>

</br>
</br>



</div>


<div class="col-md-10 col-md-offset-1">
  
    
<table class="table" id="table-users">
    <% @users.each do |user| %>
    <tr>
      
     
        <td class="text-left"><%= user.name %></br>
        
        <% if current_user.admin? %>
        | <%= link_to "削除", user, method: :delete, class: "btn btn-primary",
                                            data: { confirm: "削除しますか？" } %></br>

<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" href="#collapse<%= user.id %>"><button type="submit" style="WIDTH: 60px; HEIGHT: 40px" class="btn btn-primary">編集</button></a>
      </h4>
    </div>
    
    
    <div id="collapse<%=user.id %>" class="panel-collapse collapse">
      <ul class="list-group">
          <%= render "user",{user: user} %>
          
      </ul>
    </div>
  </div>
</div>
</div>
</td>
</tr>
<% end %>
<% end %>
</table>