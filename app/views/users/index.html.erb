<% provide(:title, '一覧') %>
<% if params[:name].present? %>
<h1>検索結果</h1>
<% else %>
<h1>全てのユーザー</h1>
<% end %>



<%= will_paginate %>


<div id="header">
<div class="nav-left">
<div id="head-logo">
<div class = "haruki1">
<%= label_tag :name, "ユーザー名検索" %>
</div>
</div><!-- head-logo -->
</div><!-- nav-left -->
<div id="nav-search">
<%= form_tag(users_path, method: "get") do %>
<div class="input-group">
<div class = "haruki">
<%= text_field_tag :name, params[:name], placeholder: "キーワード検索", class: "form-control"  %>
</div>
<span class="input-group-btn">
<%= submit_tag "検索", :name => nil, class: "btn btn-primary" %>
</span>
</div>
<% end %>
</div><!-- nav-search -->
</div><!-- header -->

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>